<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.josue.android.subnetsupernetcalc.activities.ItemDetailActivity">
        <RelativeLayout
            android:id="@+id/relativeDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/seccondAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/seccondToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"/>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <TextView
                android:id="@+id/txtInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@id/seccondAppBar"/>

            <TextView
                android:id="@+id/txtProcedimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_below="@id/txtInput"/>
        </RelativeLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/secondFloatbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:backgroundTint="@color/colorPrimary"
            app:layout_anchor="@id/relativeDetail"
            app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>
